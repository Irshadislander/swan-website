{
  "name": "swan-website",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "analyze": "ANALYZE=true vite build --mode analyze",
    "devsv": "vercel dev --listen 5173",
    "lhci": "lhci autorun",
    "lhci:preview": "BASE_URL=${BASE_URL:-https://localhost:5173} node -e \"const fs=require('fs');const p='./lighthouserc.json';const j=JSON.parse(fs.readFileSync(p));j.ci.collect.url=j.ci.collect.url.map(u=>u.replace('https://<YOUR_REAL_DOMAIN>',process.env.BASE_URL));fs.writeFileSync(p,JSON.stringify(j,null,2));\" && lhci autorun",
    "stripe:bootstrap": "tsx scripts/stripe-bootstrap.ts"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@stripe/stripe-js": "^8.1.0",
    "@tailwindcss/vite": "^4.1.15",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "echarts": "^6.0.0",
    "element-plus": "^2.11.5",
    "fuse.js": "^7.1.0",
    "jspdf": "^2.5.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
